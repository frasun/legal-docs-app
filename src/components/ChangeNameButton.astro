---
import Icon, { IconSize } from "@components/Icon.astro";

interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<change-name-button data-doc-id={id} data-title={title} title="Zmień nazwę">
  <Icon name="edit" size={IconSize.sm} />
</change-name-button>

<style>
  change-name-button {
    @apply btn btn-alt btn-icon;
  }
</style>

<script>
  import "@wc/ChangeNameButton";
</script>
