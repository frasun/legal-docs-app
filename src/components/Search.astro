---
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";
---

<section>
  <h1>Stwórz precyzyjne dokumenty prawne z&nbsp;pomocą wirtualnego prawnika</h1>
  <form id="search" method="GET" action={`${Astro.url.origin}/dokumenty`}>
    <input
      type="search"
      placeholder="Wyszukaj dokument lub sprawę np. umowa najmu, testament"
      spellcheck="false"
      name="s"
    />
    <button>Szukaj</button>
    <Icon name="search" id="menuOpen" width={24} height={24} />
  </form>
  <Picture
    src="/image-1.png"
    alt="Prawniczek"
    widths={[153, 306]}
    aspectRatio={1.26}
    sizes="153px"
    loading="eager"
    width={158}
    height={121}
  />
</section>

<style>
  section {
    @apply flex items-center justify-center flex-col gap-20;
  }

  section > h1 {
    @apply text-center;
    @apply max-w-[600px];
  }

  form {
    @apply w-full;
    @apply flex flex-wrap gap-15 items-center justify-center;
    @apply relative;
  }

  button {
    @apply btn btn-default btn-big;
  }

  input[type="search"] {
    @apply flex-grow;
    @apply pl-60;
    @apply text-lg leading-8;
    @apply py-10;
  }

  form :global(> svg) {
    @apply absolute left-20 top-0 translate-y-1/2 mt-[4px];
  }

  form :global(> svg path) {
    @apply fill-orangeDark;
  }

  section > img {
    @apply mt-10;
  }
</style>
