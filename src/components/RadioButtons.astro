---
const { values, name, selected = 0 } = Astro.props;
---

<section>
  {
    values.map(({ value, label, disabled }) => (
      <div class="input-group items-center flex-nowrap">
        <input
          type="radio"
          name={name}
          id={`${name}-${value}`}
          value={value}
          checked={selected.toString() === value.toString()}
          disabled={disabled}
        />
        <label for={`${name}-${value}`}>{label}</label>
      </div>
    ))
  }
</section>

<style>
  input[disabled] {
    @apply opacity-50;
  }

  input[disabled] + label {
    @apply opacity-50 cursor-not-allowed;
  }

  section {
    @apply flex flex-col gap-15;
  }
</style>
