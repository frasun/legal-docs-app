---
import Modal from "./Modal.astro";
---

<Modal modalId="confirm" slot="footer">
  <form method="POST">
    <header><slot name="header" /></header>
    <p><slot /></p>
    <footer>
      <hide-modal>
        <button>Anuluj</button>
      </hide-modal>
      <slot name="submit">
        <button type="submit">Potwierd≈∫</button>
      </slot>
    </footer>
  </form>

  <style>
    form {
      @apply flex flex-col gap-20 w-full;
    }

    p {
      @apply text-xl mb-20;
    }

    footer {
      @apply flex gap-15 justify-center;
    }

    footer button[type="submit"] {
      @apply btn-default;
    }

    footer button:not([type="submit"]) {
      @apply btn-alt;
    }

    footer button {
      @apply btn btn-big;
    }

    :global(#confirm) {
      @apply max-w-[400px];
    }
  </style>

  <script>
    import "@wc/HideModal";
  </script>
</Modal>
