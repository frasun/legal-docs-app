---
import { Icon } from "astro-icon";
import { SignOut } from "../auth-astro/components";

const { email } = Astro.props;
---

<>
    <span>
        <Icon name="user" width={16} height={16} />
        <span>{email}</span>
    </span>
    <a href={`${Astro.url.origin}/moje-dokumenty`}>Moje dokumenty</a>
    <SignOut params={{ callbackUrl: Astro.url.origin }}>Wyloguj siÄ™</SignOut>
</>

<style>
    span {
        @apply flex gap-10 items-center order-2 lg:order-1;
    }

    span > span {
        @apply truncate max-w-[180px] block;
        @apply text-sm;
    }

    button {
        @apply btn btn-alt order-3;
    }

    a {
        @apply order-1 lg:order-2;
        @apply btn btn-default;
        @apply mb-15 lg:mb-0;
    }
</style>
