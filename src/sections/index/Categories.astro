---
import CategoryBlock from "../../components/CategoryBlock.astro";
import { getCategories } from "../../../db/categories/category";

const icons = {
  motoryzacja: "cat-1",
  nieruchomosci: "cat-2",
  podroze: "cat-3",
  praca: "cat-4",
  rodzina: "cat-5",
  sport: "cat-6",
  zdrowie: "cat-7",
  biznes: "cat-8",
  zakupy: "cat-9",
  zwierzeta: "cat-10",
};

const categories = await getCategories();
---

<section>
  <h4>lub przeglÄ…daj w kategoriach</h4>
  <div id="categories">
    {
      categories.map(({ name, slug }) => (
        <CategoryBlock title={name} href="#" icon={icons[String(slug)]} />
      ))
    }
  </div>
  <footer>
    <a href={`${Astro.url.origin}/dokumenty`}>Zobacz wszystkie dokumenty</a>
  </footer>
</section>

<style>
  section {
    /* @apply lg:px-60; */
    @apply text-center w-full;
    @apply flex flex-col gap-40;
  }

  section > div {
    @apply flex flex-wrap items-center justify-center lg:grid lg:grid-cols-5 gap-30;
    @apply m-auto;
  }

  footer > a {
    @apply btn btn-alt;
  }

  section > h4 {
    @apply text-dark55;
  }
</style>
