---
import { getEntry } from 'astro:content';
import {format, isDate} from 'date-fns';
import {DATE_FORMAT} from '../utils/cosntants'

const { data, template, token, type } = Astro.props;

if (!data) {
  return;
}

let CompiledContent;
let textContent;

if (template) {
  const answer = await getEntry('answers', template.slug);  

  if (!answer) return;

  const {remarkPluginFrontmatter: aData, Content} = await answer.render();

  for (let key of Object.keys(aData)) {
    aData[key] = data[key];
  }

  CompiledContent = Content;
}

if (!template && token) {
  const value = data[token];

  if(type === 'date') {
    textContent = format(new Date(value), DATE_FORMAT);  
  } else {
    textContent = value
  }
}
---

<div>
  {CompiledContent && <CompiledContent />}
  {textContent && textContent}
</div>

<style>
  div {
    @apply text-dark90 text-lg;
  }
</style>
