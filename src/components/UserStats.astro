---
import Icon, { IconSize } from "@components/Icon.astro";

interface Props {
  documents: number;
  drafts: number;
  identities: number;
}

const { documents, drafts, identities } = Astro.props;
---

<section>
  <div>
    <Icon name="documents" size={IconSize.xl} />
    <big>{documents}</big>
    <span>ilość dokumentów</span>
  </div>
  <div>
    <Icon name="document-draft" size={IconSize.xl} />
    <big>{drafts}</big>
    <span>ilość szkiców</span>
  </div>
  <div>
    <Icon name="organization" size={IconSize.xl} />
    <big>{identities}</big>
    <span>ilość tożsamości</span>
  </div>
</section>

<style>
  section {
    @apply border-t border-black/30 sm:px-10;
    @apply grid grid-cols-1 sm:grid-cols-3 gap-15 md:gap-40;
    @apply py-15 md:py-40;
  }

  section div {
    @apply flex items-center flex-wrap gap-x-10 gap-y-5;
  }

  big {
    @apply text-sans-xxl text-black;
  }

  span {
    @apply text-sans-sm sm:w-full;
  }
</style>
